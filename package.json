{
  "name": "z80-disasm",
  "version": "1.0.4",
  "description": "Z80 disassembler in TypeScript",
  "main": "dist/main/index.js",
  "typing": "dist/main/index.d.ts",
  "module": "dist/module/index.js",
  "scripts": {
    "build": "npm run build:main && npm run build:module",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "build:test": "tsc -p tsconfig.test.json",
    "generate": "tsc --project opcodes && node opcodes/dist/GenerateJson.js",
    "docs": "typedoc -p . --target es6 --excludeNotExported --excludePrivate --out docs src && touch docs/.nojekyll",
    "lint": "tslint --project . --format codeFrame",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "clean": "rm -rf dist dist-tests"
  },
  "directories": {
    "test": "tests"
  },
  "keywords": [
    "z80",
    "disassembler"
  ],
  "bin": {
    "zdisasm": "bin/zdisasm"
  },
  "author": "Lawrence Kesteloot <lk@teamten.com> (https://www.teamten.com/lawrence/)",
  "repository": "https://github.com/lkesteloot/z80-disasm",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.22",
    "chai": "^4.2.0",
    "mocha": "^6.2.2",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typedoc": "^0.15.6",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "commander": "^4.0.1",
    "z80-base": "^1.0.3"
  }
}

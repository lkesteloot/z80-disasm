{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist/main",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.template.ts"
  ]
}
